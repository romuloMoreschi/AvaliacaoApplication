@model ICollection<AvaliacaoApplication.Models.Equipamento>

@{
    ViewBag.Title = "Pagina Inicial";
}
<br />
@if (TempData["MSG_S"] != null)
{
    <br />
    <p class="alert alert-success">@TempData["MSG_S"]</p>

}
else if (TempData["MSG_D"] != null)
{
    <br />
    <p class="alert alert-danger">@TempData["MSG_D"]</p>
}
<br />
@if (Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-bordered text-center">
            <thead>
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.First().Nome)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.First().Id)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.First().EstadoOrigem)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.First().EstadoDestino)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.First().Situacao)
                    </th>
                    <th scope="col">Acoes</th>

                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EstadoOrigem)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EstadoDestino)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Situacao)
                    </td>
                    <td>
                        <a asp-action="Atualizar" asp-route-id="@item.Id" class="btn btn-secondary">Atualizar</a>
                        <a asp-action="Detalhes" asp-route-id="@item.Id" class="btn btn-info">Detalhes</a>
                        <a asp-action="Excluir" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
                    </td>
                </tr>

            }
        </table>
    </div>
   <div>
</div>
}
else
{
    <span>Nenhum registro cadastrado</span>

}